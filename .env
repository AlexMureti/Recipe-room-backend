# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database - Using SQLite for local development
DATABASE_URL=sqlite:///recipe_room.db

# Security Keys - Change these for production
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# CORS - Allowed frontend origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# PayD API (Optional - for payments)
# PAYD_USERNAME=your_payd_username
# PAYD_PASSWORD=your_payd_password
# PAYD_API_SECRET=your_payd_api_secret
# PAYD_ACCOUNT_USERNAME=your_payd_account