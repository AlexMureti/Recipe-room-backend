# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security Keys
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://recipe_user:your_password@localhost/recipe_room
# For SQLite (development): sqlite:///recipe_room.db

# CORS Configuration
# Use * for development, specific origins for production
# Example for production: https://yourapp.com,https://www.yourapp.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# PayD API Credentials (app.payd.money)
PAYD_USERNAME=your_payd_api_username
PAYD_PASSWORD=your_payd_api_password
PAYD_API_SECRET=your_payd_api_secret
PAYD_ACCOUNT_USERNAME=your_payd_dashboard_username

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
